<!--index.wxml-->
<view class="page"> 
  <view class="page__bd">
    <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeTabIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabTap">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); width:48rpx;"></view>
            </view>
            <view class="weui-tab__panel">
                <view class="weui-tab__content">                 
                  <scroll-view scroll-y>   
                   <navigator url="../detail/detail?id={{newsList[0].id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">          
                      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                              <image mode="scaleToFill" style="width: 690rpx;" src="{{newsList[0].firstImage}}"></image>
                              <view class="weui-cell__bd weui-cell_primary">
                                <view>{{newsList[0].title}}</view>
                              </view>
                              <view class="weui-media-box__info">
                                  <view class="weui-media-box__info__meta">{{newsList[0].source}}</view>
                                  <view class="weui-media-box__info__meta">{{newsList[0].date}}</view>                                                                </view>
                      </view>  
                    </navigator>           
                    <view class="weui-cells weui-cells_after-title">                  
                       <navigator wx:for="{{newsList}}" wx:if="{{index>0}}" url="../detail/detail?id={{item.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">             
                          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                             <view class="weui-cell__bd weui-cell_primary">
                               <view>{{item.title}}</view>
                             </view>
                             <view class="weui-media-box__info">
                                <view class="weui-media-box__info__meta">{{item.source}}</view>
                                <view class="weui-media-box__info__meta">{{item.date}}</view>                                                                    </view>
                          </view>    
                          <view class="weui-cell__hd">                
                              <image src="{{item.firstImage}}" class="news-thumbnail"></image>
                          </view>
                      </navigator>          
                    </view>
                </scroll-view> 
                </view>               
            </view>
    </view>    
  </view>
</view>
